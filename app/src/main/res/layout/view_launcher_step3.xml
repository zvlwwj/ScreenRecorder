<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e0e0e0">


    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_item_style_list_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/iv_item_change_step3"
        android:layout_marginEnd="8dp" />

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击改变视图→"
        android:textColor="#424242"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/iv_item_change_step3"
        android:id="@+id/tv_tips_step3"
        android:layout_marginRight="8dp"/>

    <com.zou.screenrecorder.view.ItemChangView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_item_change_step3"
        android:id="@+id/item_chang_view"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>