<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#424242">
    <Button
        android:id="@+id/btn_launcher_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/begin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />
    <android.support.v7.widget.CardView android:layout_width="48dp"
        android:layout_height="48dp"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#ffffff"
        android:id="@+id/cv_launcher_step2"
        android:visibility="gone">
        <ImageView android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/frame_01"
            android:id="@+id/iv_step2"
            android:layout_gravity="center"/>
    </android.support.v7.widget.CardView>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#e0e0e0"
        android:textSize="25dp"
        android:text="点击开始按钮，出现写轮眼"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_msg_step2"/>
</android.support.constraint.ConstraintLayout>