<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#bbdefb">
    <com.zou.screenrecorder.view.ObservableScrollView android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/sv_launcher">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zou.screenrecorder.view.LauncherStep1 android:layout_width="0dp"
                android:layout_height="500dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/launcher_step1"/>
            <com.zou.screenrecorder.view.LauncherStep2 android:layout_width="0dp"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/launcher_step1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/launcher_step2" />
            <com.zou.screenrecorder.view.LauncherStep3 android:layout_width="0dp"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/launcher_step2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/launcher_step3" />
            <com.zou.screenrecorder.view.LauncherStep4 android:layout_width="0dp"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@id/launcher_step3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/launcher_step4"/>
        </android.support.constraint.ConstraintLayout>
    </com.zou.screenrecorder.view.ObservableScrollView>
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_next"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:id="@+id/iv_next"/>
</android.support.constraint.ConstraintLayout>